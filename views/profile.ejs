<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div>
              <h1><%= user.companyName %></h1>
              <p><%= user.description %></p>
              <p><%= user.headquarters %></p>
              <p><%= user.websiteURL %></p>
              <p><%= user.contactInfo %></p>
              <p><%= user.following %></p>
          </div>
          <div class="mt-5">
            <h2>Share your most recent milestones</h2>
            <form action="/update/createUpdate" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                <label for="description" class="form-label"></label>
                <textarea class="form-control" id="description" name="description"></textarea>
              </div>
              <div class="mb-3">
                <label for="media" class="form-label">Share a product demo or financial graph</label>
                <input type="file" class="form-control" id="media" name="file">
              </div>
              <div class="mb-3">
                <label for="links" class="form-label"></label>
                <textarea class="form-control" id="links" name="links">Pitch Deck Link</textarea>
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<update.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/update/<%= update[i]._id%>">
              <h2><%= update[i].description%></h2>
             <!-- <iframe class="img-fluid" src= <%= update[i].media %> ></iframe> -->
              <img class="img-fluid" src="<%= update[i].media%>">
              <h3><%= update[i].links%></h3>
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">My Feed</a>
        </div>  
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/discover">Discover</a>
        </div> 
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>