<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <a class="btn btn-primary" href="/profile/<%= update.user._id %>">View Profile</a>
      <h2><%= update.description %></h2>
      <img class="img-fluid" src="<%= update.media%>" />
      <h3><%= update.links %></h3>
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/update/likeUpdate/<%= update.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= update.likes %></h3>
        <%if(update.user == user.id){ %>
        <form
          action="/update/deleteUpdate/<%= update.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">My Profile</a>
      <a class="btn btn-primary" href="/feed">My Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
